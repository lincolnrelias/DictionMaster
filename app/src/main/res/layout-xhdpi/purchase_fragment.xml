<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="androidx.core.text.HtmlCompat"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.482"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.583"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.54"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.60"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.645"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.685"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.753"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7825"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.835"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8674"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9485"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.065"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.935"/>
        <ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/purchase_img"
            android:scaleType="centerCrop"
            android:paddingBottom="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gl_bg"
            android:background="@drawable/bg_purchase_img" />

        <androidx.cardview.widget.CardView
            android:id="@+id/main_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"

            android:background="@drawable/drop_shadow"
            app:layout_constraintTop_toBottomOf="@id/gl_icon1"
            app:layout_constraintBottom_toTopOf="@id/gl_icon2"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            app:layout_constraintEnd_toStartOf="@id/gl_right"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/iv_book_icon"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:src="@drawable/book_icon"/>

        </androidx.cardview.widget.CardView>



        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            app:layout_constraintEnd_toStartOf="@id/gl_right"
            app:layout_constraintTop_toBottomOf="@id/gl_title1"
            app:layout_constraintBottom_toBottomOf="@id/gl_title2"
            android:src="@drawable/title_icon"/>

        <TextView
            android:id="@+id/tv_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:lines="2"
            android:textSize="14sp"
            android:fontFamily= "@font/roboto_condensed"
            android:textAlignment="center"

            android:textStyle="bold"
            android:text="@{HtmlCompat.fromHtml(`Subscribe now to get &lt;font color='#5BD6FD'>unlimited&lt;/font> searches&lt;br> and full access to &lt;font color='#5BD6FD'>all features&lt;/font>.`, HtmlCompat.FROM_HTML_MODE_LEGACY)}"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            app:layout_constraintEnd_toStartOf="@id/gl_right"
            app:layout_constraintTop_toBottomOf="@id/gl_text1"
            app:layout_constraintBottom_toTopOf="@id/gl_text2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="11sp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_condensed"
            android:text="@{HtmlCompat.fromHtml(`&lt;b>Try 7 Days Free&lt;/b>, then only &lt;b>$19,99&lt;/b> per year.&lt;br> Cancel anytime.`, HtmlCompat.FROM_HTML_MODE_LEGACY)}"
            app:layout_constraintTop_toTopOf="@id/gl_text3"
            app:layout_constraintBottom_toBottomOf="@id/gl_text4"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            app:layout_constraintEnd_toStartOf="@id/gl_right"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="subscribe"
            android:textAllCaps="true"
            android:background="@drawable/bg_btn_search"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_condensed"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            app:layout_constraintEnd_toStartOf="@id/gl_right"
            app:layout_constraintTop_toTopOf="@id/gl_btn1"
            app:layout_constraintBottom_toBottomOf="@id/gl_btn2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>